<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/light_tan"
    tools:context="com.dnd.alynchos.dndcharactertracker.Character.CharacterSheetActivity">

    <!-- Identity hud -->
    <include layout="@layout/identity_hud"
        android:id="@+id/include_identity_hud"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"/>

    <!--
    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:clickable="true"
        android:src="@drawable/icon_settings32x32"
        android:scaleType="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"/>
        -->
    
    <!-- Ability and Skill Saves/Rolls -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layout_ability_mods"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/include_identity_hud">

        <!-- Proficiency -->
        <include layout="@layout/proficiency_hud"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"/>

        <!-- Saving throws hud -->
        <include layout="@layout/saving_throws_hud"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"/>

        <!-- Skills hud -->
        <include layout="@layout/skills_hud"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"/>

    </LinearLayout>

    <!-- Abilities -->
    <LinearLayout
        android:id="@+id/layout_stats"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/include_identity_hud"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/layout_ability_mods"
        android:layout_marginStart="5dp">

        <include layout="@layout/ability_layout"
            android:id="@+id/include_ability_strength"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>

        <include layout="@layout/ability_layout"
            android:id="@+id/include_ability_dexterity"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>

        <include layout="@layout/ability_layout"
            android:id="@+id/include_ability_constitution"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>

        <include layout="@layout/ability_layout"
            android:id="@+id/include_ability_intelligence"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>

        <include layout="@layout/ability_layout"
            android:id="@+id/include_ability_wisdom"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>

        <include layout="@layout/ability_layout"
            android:id="@+id/include_ability_charisma"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <!-- ********************************************************************** -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_modify_buttons"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="@string/but_modify_char"
            android:id="@+id/button_modify_character"
            android:textSize="12sp"
            android:textAlignment="gravity"
            android:gravity="center"
            android:layout_marginStart="-10dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="@string/but_delete_char"
            android:id="@+id/button_delete_char"
            android:textSize="12sp"
            android:textAlignment="gravity"
            android:gravity="center"
            android:layout_marginStart="-10dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="@string/but_modify_exp"
            android:id="@+id/button_add_experience"
            android:textSize="12sp"
            android:textAlignment="gravity"
            android:gravity="center"
            android:layout_marginStart="-10dp"/>

    </LinearLayout>

    <!-- Experience hud -->
    <include layout="@layout/footer_hud"
        android:id="@+id/include_footer_hud"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="5dp"/>

</RelativeLayout>
